<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserinfoActivity"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="1">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="사용자 정보"
           ></TextView>
    </GridLayout>

    <!--
    아래 배치된 버튼들은 layout_gravity 속성이 없으므로 wrap_content로
    디폴트 선언되어 컨텐츠의 크기만큼만 영역을 차지한다.
     -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rowCount="1"
        android:columnCount="4">

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="학번"></TextView>

        <TextView
            android:id="@+id/ID"
            android:layout_width="140dp"
            android:layout_height="50dp"></TextView>

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="소속"></TextView>

        <TextView
            android:id="@+id/orga"
            android:layout_width="140dp"
            android:layout_height="50dp"></TextView>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rowCount="1"
        android:columnCount="4">

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="성명"></TextView>

        <TextView
            android:id="@+id/name"
            android:layout_width="140dp"
            android:layout_height="50dp"></TextView>

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="전화번호"></TextView>

        <TextView
            android:id="@+id/phone"
            android:layout_width="140dp"
            android:layout_height="50dp"></TextView>
    </GridLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rowCount="1"
        android:columnCount="2">

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="email"></TextView>

        <TextView
            android:id="@+id/email"
            android:layout_width="340dp"
            android:layout_height="50dp"></TextView>
    </GridLayout>

</LinearLayout>